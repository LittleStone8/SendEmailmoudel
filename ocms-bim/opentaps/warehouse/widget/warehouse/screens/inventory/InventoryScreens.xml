    <!-- Inventory Item -->
    <screen name="findInventoryItem">
        <section>
            <actions>
                <set field="pageTitleLabel" value="WarehouseFindInventoryItem"/>
                <set field="sectionHeaderUiLabel" value="WarehouseFindInventoryItem"/>  
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer" default-value="0"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="20"/>
        
 				<service service-name="getProductInventory" result-map="result">
 				<field-map field-name="userLogin" from-field="parameters.userLogin"/>
 				<field-map field-name="partyId" from-field="parameters.userLogin.partyId"/>
 				<field-map field-name="facilityId" from-field="parameters.facilityId"/>
 				</service>
 			 	<set field="inventoryItems" from-field="result.inventoryItems"/>
				<set field="inventoryFacilitys" from-field="result.inventoryFacilitys"/>
				<set field="selectFacilityId" from-field="result.selectFacilityId"/>
				<set field="selectFacilityName" from-field="result.selectFacilityName"/>
				<set field="errorMessage" from-field="result.errorMessage"/>
 			</actions>
            <widgets>
                <decorator-screen name="main-section-decorator">
                    <decorator-section name="section-body">
                         <container style="subSectionBlock">
                            <container style="form">
                              <platform-specific>
                                <html><html-template location="component://warehouse/webapp/warehouse/inventory/FindInventoryItem.ftl"/></html>
                              </platform-specific>
                            </container>
                        </container>
                        <frame-container-header title="${uiLabelMap.ProductInventoryItems}"/>
                        <platform-specific>
                          <html><html-template location="component://warehouse/webapp/warehouse/inventory/ListInventoryItems.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="EditInventoryItem">
        <section>
            <actions>
                <set field="pageTitleLabel" value="WarehouseEditInventoryItem"/>
                <set field="sectionHeaderUiLabel" value="WarehouseEditInventoryItem"/>  
                <set field="parameters.commonFacilityDecoratorLocation" value="component://warehouse/widget/warehouse/screens/common/IntegrationScreens.xml"/>
                <script location="component://warehouse/webapp/warehouse/WEB-INF/actions/inventory/EditInventoryItem.bsh"/>
                <script location="component://warehouse/webapp/warehouse/WEB-INF/actions/inventory/setInventoryItemToHistory.bsh"/>
                <entity-condition entity-name="OrderItemShipGrpInvRes" list="inventoryItemReservations">
                    <condition-list combine="and">
                        <condition-expr field-name="inventoryItemId" operator="equals" from-field="inventoryItemId"/>
                    </condition-list>
                    <order-by field-name="reservedDatetime"/>
                </entity-condition>
            </actions>
            <widgets>
                <decorator-screen name="main-section-decorator">
                    <decorator-section name="section-body">
                        <platform-specific>
                            <html><html-template location="component://warehouse/webapp/warehouse/inventory/EditInventoryItem.ftl"/></html>
                   
                        </platform-specific>
                        <!-- 暂时隐藏 -->
                       <!--  <frame-container title="${uiLabelMap.WarehouseInventoryItemReservations}">
                          <include-form name="InventoryItemReservations" location="component://product/webapp/facility/inventory/InventoryForms.xml"/>
                        </frame-container> -->
                        <section> 
                        	
                       		<condition>
                                <if-compare field="inventoryItem.inventoryItemTypeId" operator="equals" value="NON_SERIAL_INV_ITEM"/>
                            </condition>
                        	
                            <widgets>
                             
	                              <frame-container title="${uiLabelMap.WarehousePhysicalInventoryVariances}">
	                                <include-form name="CreatePhysicalInventoryAndVariance" location="component://product/webapp/facility/inventory/InventoryForms.xml"/>
	                                <include-form name="ViewPhysicalInventoryAndVariance" location="component://product/webapp/facility/inventory/InventoryForms.xml"/>
	                              </frame-container>
      
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
